<Window x:Class="BuhoServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buho Server" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Server Status Section -->
        <GroupBox Header="Server Status" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Status:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="Server Status: Stopped" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Red" Grid.Row="0" Grid.Column="2" Margin="10,0,0,0"/>

                <TextBlock Text="Server ID:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="ServerIdText" Text="Unknown" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="2" Margin="10,5,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="PortText" Text="8080" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Connection Info Section -->
        <GroupBox Header="Connection Information" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="IP Address:" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="IpAddressText" Text="Unknown" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="Connected Clients:" Grid.Column="2" Margin="10,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="ConnectionCount" Text="0 Connected" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Connected Clients List -->
        <GroupBox Header="Connected Clients" Grid.Row="2" Margin="0,0,0,10">
            <ListBox x:Name="ClientsListBox" Margin="5"/>
        </GroupBox>

        <!-- Chat Section -->
        <GroupBox Header="Chat" Grid.Row="3" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chat Messages Display -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,5">
                    <ListBox x:Name="ChatMessagesListBox" 
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="{Binding SenderName}" FontWeight="Bold" Foreground="#2196F3"/>
                                        <Run Text=" (" Foreground="Gray"/>
                                        <Run Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" Foreground="Gray"/>
                                        <Run Text="): " Foreground="Gray"/>
                                        <Run Text="{Binding Message}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Chat Input -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ChatInputTextBox" 
                             Grid.Column="0" 
                             Margin="0,0,5,0"
                             KeyDown="ChatInputTextBox_KeyDown"/>
                    <Button x:Name="SendChatButton" 
                            Grid.Column="1" 
                            Content="Send" 
                            Width="80" 
                            Height="25"
                            Click="SendChatButton_Click"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="Start Server" Width="100" Height="30" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Server" Width="100" Height="30" Margin="5" Click="StopButton_Click" IsEnabled="False"/>
            <Button x:Name="LogsButton" Content="View Logs" Width="100" Height="30" Margin="5" Click="LogsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
