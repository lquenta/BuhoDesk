<Window x:Class="BuhoServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BuhoShared.Services;assembly=BuhoShared"
        Title="BuhoDesk Server" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="#FF5722"/>
        </Style>
        
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="{TemplateBinding Margin}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" 
                                        Background="#F8F9FA" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="0,0,0,1"
                                        Padding="10,8">
                                    <TextBlock Text="{TemplateBinding Header}" 
                                             FontWeight="SemiBold" 
                                             Foreground="#333"/>
                                </Border>
                                
                                <ContentPresenter Grid.Row="1" 
                                                Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="File">
                <MenuItem x:Name="LanguageMenuItem" Header="Language" Click="LanguageMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Server Status Section -->
        <GroupBox Header="Server Status" Grid.Row="1" Style="{StaticResource ModernGroupBox}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Status:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="Server Status: Stopped" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                <Ellipse x:Name="StatusIndicator" Style="{StaticResource StatusIndicator}" Grid.Row="0" Grid.Column="2" Margin="10,0,0,0"/>

                <TextBlock Text="Server ID:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="ServerIdText" Text="Unknown" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="2" Margin="10,5,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="PortText" Text="8080" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Connection Info Section -->
        <GroupBox Header="Connection Information" Grid.Row="2" Style="{StaticResource ModernGroupBox}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="IP Address:" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="IpAddressText" Text="Unknown" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="Connected Clients:" Grid.Column="2" Margin="10,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="ConnectionCount" Text="0 Connected" Grid.Column="3" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Connected Clients List -->
        <GroupBox Header="Connected Clients" Grid.Row="3" Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="ClientsListBox" Grid.Row="0" Margin="5"/>
                <Button x:Name="TestNotificationButton" 
                        Grid.Row="1" 
                        Content="Test Taskbar Notification" 
                        Style="{StaticResource ModernButton}"
                        Margin="5"
                        Click="TestNotificationButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Chat Section -->
        <GroupBox Header="Chat" Grid.Row="4" Style="{StaticResource ModernGroupBox}">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chat Messages Display -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,5">
                    <ListBox x:Name="ChatMessagesListBox" 
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="{Binding SenderName}" FontWeight="Bold" Foreground="#2196F3"/>
                                        <Run Text=" (" Foreground="Gray"/>
                                        <Run Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" Foreground="Gray"/>
                                        <Run Text="): " Foreground="Gray"/>
                                        <Run Text="{Binding Message}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Chat Input -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ChatInputTextBox" 
                             Grid.Column="0" 
                             Margin="0,0,5,0"
                             Style="{StaticResource ModernTextBox}"
                             KeyDown="ChatInputTextBox_KeyDown"/>
                    <Button x:Name="SendChatButton" 
                            Grid.Column="1" 
                            Content="Send" 
                            Width="80" 
                            Height="35"
                            Style="{StaticResource ModernButton}"
                            Click="SendChatButton_Click"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="StartButton" Content="Start Server" Width="120" Height="40" Margin="5" Style="{StaticResource ModernButton}" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Server" Width="120" Height="40" Margin="5" Style="{StaticResource ModernButton}" Click="StopButton_Click" IsEnabled="False"/>
            <Button x:Name="LogsButton" Content="View Logs" Width="120" Height="40" Margin="5" Style="{StaticResource ModernButton}" Click="LogsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
