<Window x:Class="BuhoServer.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buho Server Logs" Height="600" Width="800">
    <Grid>
        <TextBox x:Name="LogTextBox" 
                 IsReadOnly="True" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 Background="Black"
                 Foreground="Green"
                 FontFamily="Consolas"
                 FontSize="12"
                 Padding="5"/>
    </Grid>
</Window>