<Window x:Class="BuhoShared.Windows.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language Selection" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MinHeight="350" MinWidth="550"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select Language / Seleccionar Idioma" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,25"
                   TextWrapping="Wrap"
                   Foreground="#333"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton x:Name="EnglishRadioButton" 
                        Content="English" 
                        FontSize="14" 
                        Margin="0,8" 
                        Padding="15,12"
                        IsChecked="True"
                        FontWeight="SemiBold"/>
            <RadioButton x:Name="SpanishRadioButton" 
                        Content="EspaÃ±ol" 
                        FontSize="14" 
                        Margin="0,8"
                        Padding="15,12"
                        FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,25,0,0">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="120" 
                    Height="32" 
                    Margin="8" 
                    FontSize="13"
                    FontWeight="SemiBold"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,8"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="120" 
                    Height="32" 
                    Margin="8" 
                    FontSize="13"
                    FontWeight="SemiBold"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,8"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
