<Window x:Class="BuhoShared.Windows.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language Selection" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MinHeight="300" MinWidth="500">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select Language / Seleccionar Idioma" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton x:Name="EnglishRadioButton" 
                        Content="English" 
                        FontSize="16" 
                        Margin="0,10" 
                        Padding="10"
                        IsChecked="True"/>
            <RadioButton x:Name="SpanishRadioButton" 
                        Content="EspaÃ±ol" 
                        FontSize="16" 
                        Margin="0,10"
                        Padding="10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,30,0,0">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="100" 
                    Height="35" 
                    Margin="10" 
                    FontSize="14"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="35" 
                    Margin="10" 
                    FontSize="14"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
